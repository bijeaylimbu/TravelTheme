{
    "$schema": "http://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "styles": {
        "typography": {
            "fontFamily":"var(--wp--preset--font-family==inter)",
            "lineHeight": "1.75",
            "fontSize": "1rem"
        },
     "elements": {
        "link":{
           "color": {
            "text":"var(--wp--preset--color--travel-black)"
           }
        }
     }
    },
    
    "settings": {
        "layout": {
            "contentSize": "800px",
            "wideSize": "1183px"
        },
        "color": {
            "palette": [
                {
                    "slug":"travel-black",
                    "color": "#131313",
                    "name": "Black"
                },
                {
                    "slug": "travel-gray",
                    "color": "#8B8B8B",
                    "name": "Gray"
                  },
                  {
                    "slug": "travel-white",
                    "color": "#F7F7F7",
                    "name": "White"
                  },
                  {
                    "slug": "travel-shade-of-gray",
                    "color": "#818181",
                    "name": "A Shade of Gray"
                  }
            ]
        },
        
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Inter', sans-serif",
                    "slug": "inter",
                    "name": "Body - Inter",
                    "fontFace": [
                        {
                            "fontFamily": "'Inter', sans-serif",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/Inter-Light.ttf"
                            ]
                        }
                    ]
                }
            ]
        },
        "custom": {
            "line-height": {
                "tiny": 1.15,
                "small": 1.3,
                "medium": 1.4,
                "normal": 1.6
              }
            },
            "spacing": {
              "padding": true,
              "margin": true,
              "units": ["px", "em", "rem", "vh", "vw", "%"]
            },
            "border": {
              "radius": true,
              "color": true,
              "style": true,
              "width": true
            }
        } ,
        "customTemplates": [
            {
                "name": "header",
                "area": "header",
                "title": "Header"
            },
            {
                "name": "footer",
                "area": "footer",
                "title": "footer"
            }
        ]
}